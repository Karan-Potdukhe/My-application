<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Envelopea">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/envelopewelcome"
        android:layout_margin="5dp"

        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="300dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#67DFEE"
                >
                <TextView
                    android:id="@+id/fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fill the Details"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginLeft="130dp"
                    android:textSize="25dp"
                    />
                <TextView
                    android:id="@+id/entersize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Size:"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Size"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="100dp"
                    />
                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Quantity"
                    android:layout_marginTop="120dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    />
                <Spinner
                    android:id="@+id/abc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="200dp"
                    />
                <TextView
                    android:id="@+id/ink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ink Colour"
                    android:layout_marginTop="170dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    />
                <Spinner
                    android:id="@+id/bcd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="170dp"
                    android:layout_marginLeft="200dp"
                    />
                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="200dp"
                    />

            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="send us quotation"
                android:gravity="center"
                android:layout_marginTop="560dp"
                android:textColor="#FAF5F5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:background="#FF9800"
                android:textSize="20dp"
                />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
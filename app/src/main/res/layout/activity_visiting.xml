<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".visiting">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                android:padding="500dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                tools:ignore="OnClick">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rv1"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:onClick="onclick"
                    android:id="@+id/img1">

                </ImageButton>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                android:padding="500dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rv2"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/img2"
                    tools:ignore="InvalidId">


                </ImageButton>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                android:padding="500dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rv3"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/img3"
                    tools:ignore="DuplicateIds">


                </ImageButton>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                android:padding="500dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rv4"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/img4"
                    tools:ignore="DuplicateIds">


                </ImageButton>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                android:padding="500dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rv5"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/img5">


                </ImageButton>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                android:padding="500dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rv6"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/img6"></ImageButton></androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
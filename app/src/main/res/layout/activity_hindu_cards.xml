<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HinduCards">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/gc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="70dp"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/gc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ganeshwcd"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganesh Wedding Cards"
            android:layout_below="@+id/gc1"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#C21C1C"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/bd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:elevation="20dp"
            android:layout_marginLeft="20dp"
            app:cardElevation="70dp"
            android:layout_toRightOf="@+id/gc1"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/boxcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boxcard"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Box Wedding Card"
            android:layout_below="@+id/gc1"
            android:layout_toRightOf="@+id/gc1"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textColor="#1D33AD"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/rc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:background="#FCE8E8"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/rollcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/aladincard"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll Wedding Card"
            android:layout_marginLeft="140dp"
            android:layout_below="@+id/rc1"
            android:textStyle="bold"
            android:layout_marginRight="30dp"
            android:textColor="#9C27B0"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/pcokc"
            android:layout_width="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="70dp"
            android:elevation="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/peacock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pecock"
                android:layout_marginLeft="10dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pcokc"
            android:textSize="16sp"
            android:textColor="#1E1038"
            android:text="Peacock Wedding Card"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/peak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="70dp"
            android:elevation="20dp"
            android:layout_toRightOf="@+id/pcokc">

            <ImageView
                android:id="@+id/bdc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bridegroom"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pcokc"
            android:layout_toRightOf="@+id/pcokc"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:textColor="#FF9800"
            android:text="Bride Wedding Card"/>







    </RelativeLayout>




</LinearLayout>
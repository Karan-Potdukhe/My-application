<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeddingDash">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background">

                    <ImageView
                        android:id="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/hinducard"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hindu Cards"
                        android:layout_below="@+id/a"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="60dp"/>

                    <ImageView
                        android:id="@+id/b"
                        android:layout_toRightOf="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/muslimcard"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/a"
                        android:layout_below="@+id/b"
                        android:layout_marginLeft="60dp"
                        android:text="Muslim Card"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/c"
                        android:layout_toRightOf="@+id/b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/sikhcard"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/b"
                        android:layout_below="@+id/c"
                        android:layout_marginLeft="60dp"
                        android:text="Sikh Card"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <ImageView
                        android:id="@+id/d"
                        android:layout_toRightOf="@+id/c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/crishancard"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/c"
                        android:layout_below="@+id/d"
                        android:text="Cristian Card"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="60dp"/>

                    <ImageView
                        android:id="@+id/e"
                        android:layout_toRightOf="@+id/d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/othercard"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/d"
                        android:textSize="16sp"
                        android:layout_below="@+id/e"
                        android:text="Other Cards"
                        android:layout_marginLeft="60dp"
                        android:textStyle="bold"
                        android:textColor="#000"/>


                </RelativeLayout>

            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Description Of Wedding Cards"
                    android:textAlignment="center"
                    android:textColor="#E91010"
                    android:textStyle="italic"
                    android:textSize="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/colorimg">

                <ImageView
                    android:id="@+id/imga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wedtema"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/imgb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wedtemb"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imga"/>

                <ImageView
                    android:id="@+id/imgc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wedtemc"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgb"/>

                <ImageView
                    android:id="@+id/imgd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wedtemd"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/imga"/>

                <ImageView
                    android:id="@+id/imge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wedteme"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/imgd"
                    android:layout_below="@+id/imgb"/>

                <ImageView
                    android:id="@+id/imgf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wedtemf"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/imge"
                    android:layout_below="@+id/imgb"/>

                <ImageView
                    android:id="@+id/imgg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wedtemg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/imgd"/>

                <ImageView
                    android:id="@+id/imgh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wedtemh"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/imgg"
                    android:layout_below="@+id/imgd"/>

                <ImageView
                    android:id="@+id/imgi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wedtemi"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/imgh"
                    android:layout_below="@+id/imgd"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cards Pattern"
                android:textSize="16sp"
                android:textColor="#14EEDA"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/rela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/carda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/carda"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/cardb"
                    android:layout_toRightOf="@+id/carda"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cardb"/>


                <ImageView
                    android:id="@+id/cardc"
                    android:layout_toRightOf="@+id/carda"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cardc"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/cardb"
                    />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designs Of Cards"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textColor="#098EF8"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <ImageView
                    android:id="@+id/designa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/designax"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/designb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/designa"
                    android:src="@drawable/designbx" />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/postwedcarda"/>


            </RelativeLayout>












        </LinearLayout>


    </ScrollView>




</LinearLayout>